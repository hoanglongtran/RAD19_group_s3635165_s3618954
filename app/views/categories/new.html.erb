<% provide(:title, 'New Category') %>
<h1>New Category</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@category) do |f| %>
      <%= f.label :category %>
      <%= f.text_field :category %>

      <%= f.submit "Create new category", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
