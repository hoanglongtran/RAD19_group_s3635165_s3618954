<% provide(:title, 'New Location') %>
<h1>New Location</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@location) do |f| %>
      <%= f.label :location %>
      <%= f.text_field :location %>

      <%= f.submit "Create new location", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

