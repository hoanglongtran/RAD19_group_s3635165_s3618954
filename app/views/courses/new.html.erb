<% provide(:title, "New Course") %>
<h1>New Course</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@courses) do |f| %>

      <%= f.label :name %>
      <%= f.email_field :name, class: 'form-control' %>

      <%= f.label :prerequisite %>
      <%= f.password_field :prerequisite, class: 'form-control' %>

      <%= f.label :description %>
      <%= f.password_field :description, class: 'form-control' %>

    <div class="field">
      <%= f.label :category %>
      <% Category.all.each do |category| %>
        <%= category.category %>
        <%= f.check_box :category_id %>
      <% end %>
    </div>

    <div class="field">
      <% Location.all.each do |location| %>
        <%= check_box_tag "product[location_ids][]", location.id %>
        <%= location.location %>
      <% end %>
    </div>

    <%= f.submit "Create new course", class: "btn btn-primary" %>

    

