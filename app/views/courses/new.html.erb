<% provide(:title, "New Course") %>
<h1>New Course</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@courses) do |f| %>

      <%= f.label :name %>
      <%= f.email_field :name, class: 'form-control' %>

      <%= f.label :prerequisite %>
      <%= f.password_field :prerequisite, class: 'form-control' %>

      <%= f.label :description %>
      <%= f.password_field :description, class: 'form-control' %>

      <%= f.label :category, class: "checkbox inline" do %>
      <% cats = ['A', 'B', 'C'] %>
      <%  cats.each do |cat| %>
      <%= f.check_box :cats, { multiple: true }, cat, false %>
      <%= f.submit "Create course", class: "btn btn-primary" %>
      <% end %>
        
    <% end %>

  </div>
</div>

