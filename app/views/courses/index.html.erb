<% provide(:title, 'All courses') %>
<h1>All courses</h1>


<ul class="courses">
  <% @courses.each do |course| %>
    
    <div class="row">
	  <aside class="col-md-4">
	    <section class="course_info">
	      <h1>
		<%= gravatar_course @course %>
		<%= @course %>
	      </h1>
	    </section>
	  </aside>

	<h1>         
	<%= course.name %>
 	</h1>
	<h2>
	  <%= course.category %>
          <%= course.locations %>
          <%= course.created_at %>
	</h2>
    </div>

  <% end %>
</ul>


