<% provide(:title, @course.name) %>

<h1> <%= @course.name %></h1>

<div class = "row">
  <div class = "col-md-8">
    <h3> Prerequisite: <%= @course.prerequisite %> </h3>
    <h4> Category: <%= link_to @course.category.category, course_path(:category => @course.category.category) %> </h4>
    <h4> Location: <% @course.locations.each do |location| %>
      <%= link_to location.location, course_path(:location => location.location) %>
    <% end %> </h4>
    <h4> Course Description: </h4>
    <h5> <%= @course.description %> </h5>
    <% if logged_in? %>
      <% if current_user?(@course.user) %>
        <h4> <%= link_to "Edit Course", edit_course_path(@course.id) %> </h4>
      <% end %>
    <% end %>
  </div>

  <div class = "col-md-2">
    <div class = "row">
      <h4> <%= gravatar_course @user %> </h4>
    </div>
    <div class = "row">
      <h4> Coordinator: <%= link_to @course.user.name, @course.user %> </h4>
    </div>
  </div>

</div>
