<% provide(:title, @user.name) %>

<div class="row">
  <h1>  
    <%= gravatar_for @user %>
    Coordinator: 
    <%= @user.name %>
  </h1>
</div>

<ul class="courses">
  <% @courses.each do |course| %> 
    <div class="row">
      <h1>         
        <%= link_to course.name, course %>
      </h1> 
      <h2> Score: <%= course.score %> </h2>
      <h2> Creation Date: <%= course.created_at %></h2>
    </div>
  <% end %>
</ul>
